<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>跨年特别网页</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #000;
      color: #fff;
      text-align: center;
      margin: 0;
      padding: 0;
    }

    #container {
      position: relative;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    #custom-text {
      font-size: 24px;
      margin-bottom: 20px;
    }

    #image-gallery {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    img {
      max-width: 100%;
      max-height: 300px;
      margin: 0 10px;
    }
  </style>
</head>
<body>
  <div id="container">
    <h1>欢迎来到跨年特别网页</h1>
    
    <div id="custom-text">
      <p id="text"></p>
    </div>

    <audio controls autoplay loop>
      <source src="your-audio-file.mp3" type="audio/mp3">
      Your browser does not support the audio tag.
    </audio>

    <div id="image-gallery"></div>

    <script>
      // Customize your text and speed here
      const customText = "Happy New Year!";
      const speed = 100; // in milliseconds

      // Customize your image URLs here
      const imageUrls = [
        "image1.jpg",
        "image2.jpg",
        "image3.jpg"
      ];

      // Set the custom text
      const textElement = document.getElementById('text');
      textElement.textContent = customText;

      // Display text with specified speed
      let index = 0;
      function displayText() {
        if (index <= customText.length) {
          textElement.textContent = customText.slice(0, index);
          index++;
          setTimeout(displayText, speed);
        }
      }
      displayText();

      // Display images
      const imageGallery = document.getElementById('image-gallery');
      imageUrls.forEach(url => {
        const imgElement = document.createElement('img');
        imgElement.src = url;
        imageGallery.appendChild(imgElement);
      });
    </script>
  </div>
</body>
</html>
